<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_template"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:baselineAligned="false"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="15dp"
    android:theme="@style/search_dialog">

    <LinearLayout
        android:id="@+id/ll_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/ib_share_result"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hier steht eine lange Frage. Hier steht eine lange Frage. Hier steht eine lange Frage. "
            android:textColor="@color/hint_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Super Gast!"
            android:textColor="@color/cardview_shadow_start_color"
            android:textSize="11sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_share_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_question"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ll_question"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_share_white_24dp"
        android:tint="@color/icon_color" />

</RelativeLayout>