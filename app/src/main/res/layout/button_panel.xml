<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imagebutton_naechste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:paddingBottom="11dp"
        android:paddingTop="11dp"
        android:scaleType="fitCenter"
        android:src="@drawable/selector_naechste_frage" />

    <ImageButton
        android:id="@+id/ib_share_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/imagebutton_naechste"
        android:background="@android:color/transparent"
        android:src="@drawable/bt_share"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/imagebutton_zurueck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imagebutton_naechste"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/imagebutton_naechste"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/bt_zurueck"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/imagebutton_nur_favoriten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imagebutton_naechste"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/bt_favorites_only_disabled" />

    <ImageButton
        android:id="@+id/imagebutton_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/imagebutton_naechste"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/selector_bt_search" />

</RelativeLayout>