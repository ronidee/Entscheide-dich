<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_fragen" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_gravity="center" android:elevation="6dp">

    <LinearLayout
        android:id="@+id/ll_fragen" android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:background="@color/white">

        <!-- horizontal divider -->
        <View
            android:id="@+id/divider"
            style="@style/Divider_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:background="@color/background"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rl_question_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_question_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:maxHeight="100dp"
                android:text="Beispieltext für eine Frage von Entscheide Dich! Dieser Text kann sehr sehr lang sein. Deshalb sollte Layouting ernst genommen werden"
                android:textAlignment="center"
                android:textColor="@color/nmr_background"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textview_question_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:maxHeight="100dp"
                android:text="Beispieltext für eine Frage von Entscheide Dich! Dieser Text kann sehr sehr lang sein. Deshalb sollte Layouting ernst genommen werden"
                android:textAlignment="center"
                android:textColor="@color/nmr_background"
                android:textSize="16sp"
                android:visibility="invisible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textview_sendung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sendung mit Tolle Person"
            android:textAlignment="center"
            android:textColor="@color/icon_color"
            android:textSize="12sp" />

        <!-- horizontal divider -->
        <View
            android:id="@+id/divider1"
            style="@style/Divider_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"
            android:background="@color/background"
            android:visibility="visible" />

        <!-- Layout with 4 imagebuttons (share, random, youtube, favour) -->
        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_gast"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imagebutton_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:src="@drawable/ic_share_white_24dp"
                android:tint="@color/icon_color" />


            <ImageButton
                android:id="@+id/imagebutton_zufaellig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:src="@drawable/ic_shuffle_white_24dp"
                android:tint="@color/icon_color" />

            <ImageButton
                android:id="@+id/imagebutton_youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:src="@drawable/ic_youtube_white_24dp"
                android:tint="@color/icon_color" />

            <ImageButton
                android:id="@+id/imagebutton_favorit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:src="@drawable/ic_favorite_border_white_24dp"
                android:tint="@color/icon_color" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>